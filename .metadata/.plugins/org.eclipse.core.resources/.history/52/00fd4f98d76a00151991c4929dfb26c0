
public class Robot {

	//instance data (all Robot objects will have an int id)
	private int id;
	
	//inner class. This class will now have access to the instance data of the Robot class
	class Brain {
		
	}

	public Robot(int id) {
		this.id = id;
	}
	
	public void start() {
		System.out.println("Starting robot " + id);
	}

}
